    <link href="~/Content/bootstrap-rating/star-rating.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-rating/star-rating.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-fileinput/css/fileinput.css" rel="stylesheet" />

    <script type="text/javascript" src="~/Scripts/jquery-1.11.2.min.js"></script>
    @*<script src="~/Scripts/jquery-migrate.min.js" type="text/javascript"></script>*@
    <!-- IMPORTANT! Load jquery-ui.min.js before bootstrap.min.js to fix bootstrap tooltip conflict with jquery ui tooltip -->
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>

    <script src="~/Scripts/fileinput.js"></script>
    <script type="text/javascript">
        //$(document).ready(function () {
        //    $(document).on("click", "#btnNewPost", function () {
        //        var url = $(this).attr("data-url");

        //        $.get(url , function (data) {
        //            $('#modal-post-detail').html(data);
        //            //$.validator.unobtrusive.parse($('.modal-body'));
        //        });
        //    });
        //});
    </script>

</head>
<body>
    <!-- Start Page Loading -->
    <div id="loader-wrapper">
        <div id="loader"></div>
        <div class="loader-section section-left"></div>
        <div class="loader-section section-right"></div>
    </div>
    <!-- End Page Loading -->
    <header id="header" class="page-topbar">
        <!-- start header nav-->
        @if (Session["User"] != null)
        {
            Html.RenderAction("NavbarDetails", "Dashboard");
        }
    </header>
    

    <div id="main" class="col s12 m6 l3 centered" style="padding-left: 1%; width: 99%; position: absolute;">
        <!-- START WRAPPER -->
        <div class="wrapper">
            <!-- START LEFT SIDEBAR NAV-->
            @*<aside id="left-sidebar-nav">
                @if (Session["User"] != null)
                {
                    Html.RenderAction("MenuDetails", "Dashboard");
                }
            </aside>*@
            <section id="content">

                <!--start container-->
                @RenderBody()

            </section>
        </div>
    </div>
    <div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
        <a class="btn-floating btn-large red modal-trigger" id="btnNewPost" href="#modal1" data-url="@Url.Action("NewPost","Post")">
            <i class="large mdi-editor-mode-edit"></i>
        </a>
    </div>



    <!-- ================================================
      Scripts
      ================================================ -->
   


    <!--materialize js-->
    <script type="text/javascript" src="~/Scripts/materialize.js"></script>
    <!--prism-->
    <script type="text/javascript" src="~/Scripts/prism.js"></script>
    <!--scrollbar-->
    <script type="text/javascript" src="~/Scripts/plugin/perfect-scrollbar/perfect-scrollbar.min.js"></script>
    <script type="text/javascript" src="~/Scripts/plugin/chartist-js/chartist.min.js"></script>
    <!--plugins.js - Some Specific JS codes for Plugin Settings-->
    <script type="text/javascript" src="~/Scripts/plugins.js"></script>

    <script src="~/Scripts/star-rating.js"></script>

    <script type="text/javascript" src="~/Scripts/Custom.js"></script>

    <div class="row center">
        @if (TempData["SuccessMsg"] != null)
        {
            <script type="text/javascript">
                Materialize.toast('@TempData["SuccessMsg"].ToString().Replace(@"\r\n", @"")', 4000)
            </script>
            @*<div class="card-panel light-green white-text">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                    <strong><span class="fa fa-check"></span></strong>@TempData["SuccessMsg"].ToString()
                </div>*@
        }

        @if (TempData["ErrorMsg"] != null)
        {
            <script type="text/javascript">
                Materialize.toast('@TempData["ErrorMsg"].ToString()', 4000)
            </script>
            @*<div class="card-panel red white-text">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                    <strong><span class="fa  fa-times"></span></strong>@TempData["ErrorMsg"].ToString()
                </div>*@
        }

    </div>

    <div id="modal1" class="modal" tabindex="-1" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-header">
            <div class="row">
                <a href="#" style="float:right;" class="waves-effect waves-red btn-flat modal-action modal-close">Close</a>
            </div>
        </div>
        <div class="modal-content center" id="modal-post-loader">
            <div class="preloader-wrapper active">
                <div class="spinner-layer spinner-red-only">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="gap-patch">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="model-content" id="modal-post-detail" style="padding: 1%;">

        </div>
    </div>

</body>
</html>