    <!-- For Windows Phone -->
    <!-- CORE CSS-->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/themeCSS/materialize.css" type="text/css" rel="stylesheet" media="screen,projection">
    <link href="~/Content/themeCSS/style.css" type="text/css" rel="stylesheet" media="screen,projection">
    <!-- INCLUDED PLUGIN CSS ON THIS PAGE -->
    <link href="~/Content/themeCSS/prism.css" type="text/css" rel="stylesheet" media="screen,projection">
