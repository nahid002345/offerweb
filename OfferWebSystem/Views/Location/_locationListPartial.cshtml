@model List<OfferWebSystem.EFnClass.OfferLocation>

<div class="col s12 m12 l12">
    @if (Model != null && Model.Count > 0)
    {
        var grid = new WebGrid(Model, rowsPerPage: 10, canPage: true, canSort: false);
        @grid.GetHtml(
                         tableStyle: "table",
                         headerStyle: "flip-content",
                         alternatingRowStyle: "striped",
                         columns: new[]{
                             grid.Column(header: "Location Name",format:@<text><a class="editLocation modal-trigger" href="#modal1" data-id="@item.ID" data-url="@Url.Action("UpdateLocation", "Location")">@item.LocationName</a></text>),

                           grid.Column("IsActive", "Status",format: (item) => (item.IsActive) ? Html.Raw("<span class='mdi-action-done'></span>") : Html.Raw("<span class='mdi-action-highlight-remove'></span>"))
                         },
                        mode: WebGridPagerModes.All
                        );
    }
    else
    {
        <div class="row">
            <div class="card-panel red lighten-3 white-text">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                <strong>Warning!</strong> No Locations Found!!!!
            </div>
        </div>
    }
</div>
